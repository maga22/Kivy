#: kivy 1.9.1
#: import MDFlatButton kivymd.button.MDFlatButton

<BugReporter>:
    txt_traceback: txt_traceback

    Image:
        source: root.icon_background
        opacity: 0.2

    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)

        Label:
            id: title
            text: root.label_info_for_user
            text_size: self.size
            font_size: '16pt'
            halign: 'center'
            size_hint_y: None
            height: dp(50)

        Label:
            id: subtitle
            text: root.info_for_user
            text_size: self.size
            font_size: '11pt'
            halign: 'center'
            valign: 'top'
            size_hint_y: None
            height: dp(100)

        ScrollView:
            id: e_scroll
            scroll_y: 0

            TextInput:
                id: txt_traceback
                size_hint_y: None
                height: max(e_scroll.height, self.minimum_height)
                background_color: 1, 1, 1, 0.05
                text: root.txt_report
                foreground_color: 1, 1, 1, 1
                readonly: root.report_readonly

        BoxLayout:
            id: box_layout
            size_hint: 1, None
            padding: 5, 5
            height: dp(50)
            spacing: 2

            MDFlatButton:
                text: root.txt_button_close
                on_release: root._close()
